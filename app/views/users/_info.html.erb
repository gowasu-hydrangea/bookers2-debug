<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  
  <!--フォロー数の表示部分(follows)-->
  <!--数字をクリックすると一覧画面(views/relationships/_follow_list.html.erb)に遷移する-->
  <tr>
    <th>follows</th>
    <th><%= link_to user.followings.count, user_followings_path(user.id) %></th>
  </tr>
  
  <!--フォロワー数の表示部分(followers)-->
  <!--数字をクリックすると一覧画面(views/relationships/_follow_list.html.erb)に遷移する-->
  <tr>
    <th>follewers</th>
    <th><%= link_to user.followers.count, user_followers_path(user.id) %></th>
  </tr>
  
</table>
　
<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>

<div class= 'row'>
  <!--フォローする、フォロー外すボタンの表示部分-->
  <% unless current_user == user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー外す", user_relationships_path(user.id), class: "btn btn-secondary", method: :delete %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user.id), class: "btn btn-primary", method: :post %>
  <% end %>
  <% end %>
</div>