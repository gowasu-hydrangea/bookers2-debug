          <h5>検索結果</h5>
          <table class="table table-hover table-inverse">
            <!--検索対象がUserのとき-->
            <% if @range == "User" %>
              <tbody>
                <% @users.each do |user| %>
                  <tr>
                    <td><%= user.name %></td>
                  </tr>
                <% end%>
              </tbody>
            <% else %>
              <!--検索対象がUserではない時＝Bookのとき-->
              <tbody>
                <% @books.each do |book| %>
                  <tr>
                    <td><%= book.title %></td>
                    <td><%= book.body %></td>
                  </tr>
                <% end %>
              </tbody>
            <% end %>
          </table>