    <% if @users.exists? %>
      <% @users.each do |user| %>
        <table>
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          
          <tbody>
            <tr>
              <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
              <td><%= user.name %></td>
              <td>フォロー数: <%= user.followings.count %></td>
              <td>フォロワー数: <%= user.followers.count %></td>
              <td><%= link_to 'Show', user %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    <% else %>
      <div class="container mt-5">
        <div class='row'>
          <div class='mx-auto'>
              <h3>ユーザーはいません</h3>
          </div>
        </div>
      </div>
    <% end %>