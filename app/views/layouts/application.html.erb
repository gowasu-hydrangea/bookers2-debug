    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <%= render 'layouts/header' %>
      <!--ポ・基＞課題５-->
      <!--検索機能の実装-->
      <!--検索窓・検索ボタン表示部分-->
      <%= render 'searches/search_form' %>
      <main>
        <p id="notice"><%= notice %></p>
        <%= yield %>
      </main>
    <%= render 'layouts/footer' %>
  </body>
</html>
